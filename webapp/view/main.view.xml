<mvc:View controllerName="com.nubexx.hr.pokemonfiori.controller.main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

        <content>
            <Label text = "{i18n>firstDigit}" labelFor="input-a"/>
            <Input id = "input-a" type = "Number" required="true"/>

            <Label text = "{i18n>secondDigit}" labelFor="input-b"/>
            <Input id = "input-b" type = "Number" required="true"/>
        </content>

        <footer>
        
        	<Toolbar>

				<Button id = "sumButton"
                    type = "Default" 
                    text = "{i18n>sumButton}"
                    press = "onPress"
                    class = "sapUITinyMargin">
				</Button>

                <Button id = "subButton"
                    type = "Default" 
                    text = "{i18n>subButton}"
                    press = "onPress"
                    class = "sapUITinyMargin">
				</Button>

                <Button id = "multButton"
                    type = "Default" 
                    text = "{i18n>multButton}"
                    press = "onPress"
                    class = "sapUITinyMargin">
				</Button>

			</Toolbar>
        </footer>

    </Page>
</mvc:View>
